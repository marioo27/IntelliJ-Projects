<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dam.di.calculadora.CalculadoraController">

    <TextField fx:id="tfMantisa" alignment="CENTER_RIGHT" prefHeight="114.0" prefWidth="345.0" />

    <GridPane alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="354.0" prefWidth="345.0">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>

        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
        </rowConstraints>

        <!-- Primera fila -->
        <Button fx:id="btnAC" onAction="#borrarTodo" text="AC" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Button fx:id="btnC" onAction="#borrarUno" text="C" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Button fx:id="btnPorcentaje" onAction="#opPorcentaje" text="%" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <Button fx:id="btnDiv" onAction="#opDiv" text="÷" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <!-- Segunda fila -->
        <Button fx:id="btn7" onAction="#num7" text="7" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Button fx:id="btn8" onAction="#num8" text="8" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button fx:id="btn9" onAction="#num9" text="9" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <Button fx:id="btnMult" onAction="#opMult" text="x" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

        <!-- Tercera fila -->
        <Button fx:id="btn4" onAction="#num4" text="4" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Button fx:id="btn5" onAction="#num5" text="5" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Button fx:id="btn6" onAction="#num6" text="6" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
        <Button fx:id="btnResta" onAction="#opResta" text="-" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

        <!-- Cuarta fila -->
        <Button fx:id="btn1" onAction="#num1" text="1" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Button fx:id="btn2" onAction="#num2" text="2" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Button fx:id="btn3" onAction="#num3" text="3" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
        <Button fx:id="btnSuma" onAction="#opSuma" text="+" GridPane.rowIndex="3" GridPane.columnIndex="3"/>

        <!-- Quinta fila -->
        <Button fx:id="btnRaiz" onAction="#opRaiz" text="√" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Button fx:id="btn0" onAction="#num0" text="0" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        <Button fx:id="btnDecimal" onAction="#decimal" text="." GridPane.rowIndex="4" GridPane.columnIndex="2"/>
        <Button fx:id="btnIgual" onAction="#opIgual" text="=" GridPane.rowIndex="4" GridPane.columnIndex="3"/>
    </GridPane>
</VBox>
