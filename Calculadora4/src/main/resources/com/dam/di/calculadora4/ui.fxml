<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dam.di.calculadora4.CalculadoraController">

   <children>

      <TextField fx:id="tfMantisa" alignment="CENTER_RIGHT" prefHeight="114.0" prefWidth="345.0" />

      <GridPane alignment="CENTER" gridLinesVisible="true" prefHeight="275.0" prefWidth="217.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>

         <children>

             <Button fx:id="btn0" mnemonicParsing="false" onAction="#num" text="0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
             <Button fx:id="btn1" mnemonicParsing="false" onAction="#num" text="1"  GridPane.rowIndex="3" />
             <Button fx:id="btn2" mnemonicParsing="false" onAction="#num" text="2" GridPane.columnIndex="1" GridPane.rowIndex="3" />
             <Button fx:id="btn3" mnemonicParsing="false" onAction="#num" text="3" GridPane.columnIndex="2" GridPane.rowIndex="3" />
             <Button fx:id="btn4" mnemonicParsing="false" onAction="#num" text="4" GridPane.rowIndex="2" />
             <Button fx:id="btn5" mnemonicParsing="false" onAction="#num" text="5" GridPane.columnIndex="1" GridPane.rowIndex="2" />
             <Button fx:id="btn6" mnemonicParsing="false" onAction="#num" text="6" GridPane.columnIndex="2" GridPane.rowIndex="2" />
             <Button fx:id="btn7" mnemonicParsing="false" onAction="#num" text="7" GridPane.rowIndex="1" />
             <Button fx:id="btn8" mnemonicParsing="false" onAction="#num" text="8" GridPane.columnIndex="1" GridPane.rowIndex="1" />
             <Button fx:id="btn9" mnemonicParsing="false" onAction="#num" text="9" GridPane.columnIndex="2" GridPane.rowIndex="1" />

            <Button fx:id="btnSuma" mnemonicParsing="false" text="+" GridPane.columnIndex="3" GridPane.rowIndex="3" />
            <Button fx:id="btnResta" mnemonicParsing="false" text="-" GridPane.columnIndex="3" GridPane.rowIndex="2" />
            <Button fx:id="btnMult" mnemonicParsing="false" text="*" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            <Button fx:id="btnDiv" mnemonicParsing="false" text="/" GridPane.columnIndex="3" />

            <Button fx:id="btnAC" mnemonicParsing="false" text="AC" />
            <Button fx:id="btnC" mnemonicParsing="false" text="C" GridPane.columnIndex="1" />
            <Button fx:id="btnPorcentaje" mnemonicParsing="false" text="%" GridPane.columnIndex="2" />
            <Button fx:id="btnRaiz" mnemonicParsing="false" text="Raiz" GridPane.rowIndex="4" />
            <Button fx:id="btnDecimal" mnemonicParsing="false" text="." GridPane.columnIndex="2" GridPane.rowIndex="4" />
            <Button fx:id="btnIgual" mnemonicParsing="false" text="=" GridPane.columnIndex="3" GridPane.rowIndex="4" />

