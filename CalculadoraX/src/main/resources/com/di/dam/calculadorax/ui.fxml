<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.di.dam.calculadorax.CalculadoraController"
      stylesheets="@ui.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <TextField prefHeight="51.0" prefWidth="117.0" VBox.vgrow="SOMETIMES"/>
    <GridPane gridLinesVisible="true" VBox.vgrow="SOMETIMES">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Button fx:id="btn0" mnemonicParsing="false" onAction="#btnFnc" text="0" GridPane.columnIndex="1"
                GridPane.rowIndex="4"/>
        <Button fx:id="btn1" mnemonicParsing="false" onAction="#btnFnc" text="1" GridPane.rowIndex="3"/>
        <Button fx:id="btn2" mnemonicParsing="false" onAction="#btnFnc" text="2" GridPane.columnIndex="1"
                GridPane.rowIndex="3"/>
        <Button fx:id="btn3" mnemonicParsing="false" onAction="#btnFnc" text="3" GridPane.columnIndex="2"
                GridPane.rowIndex="3"/>
        <Button fx:id="btnSuma" mnemonicParsing="false" onAction="#btnFnc" text="+" GridPane.columnIndex="3"
                GridPane.rowIndex="3"/>
        <Button fx:id="btnIgual" mnemonicParsing="false" onAction="#result" text="=" GridPane.columnIndex="3"
                GridPane.rowIndex="4"/>
        <Button fx:id="btnDecimal" mnemonicParsing="false" onAction="#decimal" text="," GridPane.columnIndex="2"
                GridPane.rowIndex="4"/>
        <Button fx:id="btn4" mnemonicParsing="false" onAction="#btnFnc" text="4" GridPane.rowIndex="2"/>
        <Button fx:id="btn5" mnemonicParsing="false" onAction="#btnFnc" text="5" GridPane.columnIndex="1"
                GridPane.rowIndex="2"/>
        <Button fx:id="btn6" mnemonicParsing="false" onAction="#btnFnc" text="6" GridPane.columnIndex="2"
                GridPane.rowIndex="2"/>
        <Button fx:id="btnResta" mnemonicParsing="false" onAction="#btnFnc" text="-" GridPane.columnIndex="3"
                GridPane.rowIndex="2"/>
        <Button fx:id="btnMult" mnemonicParsing="false" onAction="#opMult" text="x" GridPane.columnIndex="3"
                GridPane.rowIndex="1"/>
        <Button fx:id="btnDiv" mnemonicParsing="false" onAction="#opDiv" text="÷" GridPane.columnIndex="3"/>
        <Button fx:id="btnRaiz" mnemonicParsing="false" onAction="#opRaiz" text="√" GridPane.rowIndex="4"/>
        <Button fx:id="btn7" mnemonicParsing="false" onAction="#btnFnc" text="7" GridPane.rowIndex="1"/>
        <Button fx:id="btn8" mnemonicParsing="false" onAction="#btnFnc" text="8" GridPane.columnIndex="1"
                GridPane.rowIndex="1"/>
        <Button fx:id="btn9" mnemonicParsing="false" onAction="#btnFnc" text="9" GridPane.columnIndex="2"
                GridPane.rowIndex="1"/>
        <Button fx:id="btnAC" mnemonicParsing="false" onAction="#borraTodo" text="AC"/>
        <Button fx:id="btnC" mnemonicParsing="false" onAction="#borraUlt" text="C" GridPane.columnIndex="1"/>
        <Button fx:id="btnPorcentaje" mnemonicParsing="false" onAction="#opPorcentaje" text="\%"
                GridPane.columnIndex="2"/>
    </GridPane>
</VBox>
